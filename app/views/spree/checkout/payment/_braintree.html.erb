<% payment_method.provider # Braintree::Configuration is lazily initialized, this sets it up so we can generate a client token. -%>
<% content_for :head do %>
  <%= javascript_include_tag 'https://js.braintreegateway.com/v2/braintree.js' %>
  <%= javascript_tag do %>
    braintree.clientToken = "<%= Braintree::ClientToken.generate %>"
  <% end %>
<% end -%>

<%= image_tag 'credit_cards/credit_card.gif', :id => 'credit-card-image' %>
<% param_prefix = "payment_source[#{payment_method.id}]" %>

<p class="field">
  <%= label_tag "name_on_card_#{payment_method.id}", Spree.t(:name_on_card) %><span class="required">*</span><br />
  <%= text_field_tag "", "#{@order.billing_firstname} #{@order.billing_lastname}", { :"data-braintree-name" => "cardholder_name", id: "name_on_card_#{payment_method.id}" } %>
</p>

<p class="field" data-hook="card_number">
  <%= label_tag "card_number", Spree.t(:card_number) %><span class="required">*</span><br />
  <% options_hash = Rails.env.production? ? {:autocomplete => 'off'} : {} %>
  <%= text_field_tag "", '', options_hash.merge(:"data-braintree-name" => "number", :id => 'card_number', :class => 'required cardNumber', :size => 19, :maxlength => 19, :autocomplete => "off") %>
  &nbsp;
  <span id="card_type" style="display:none;">
    ( <span id="looks_like" ><%= Spree.t(:card_type_is) %> <span id="type"></span></span>
      <span id="unrecognized"><%= Spree.t(:unrecognized_card_type) %></span>
    )
  </span>
</p>

<p class="field" data-hook="card_expiration">
  <%= label_tag "card_expiry", Spree.t(:expiration) %><span class="required">*</span><br />
  <%= text_field_tag "", '', :"data-braintree-name" => "expiration_date", :id => 'card_expiry', :class => "required cardExpiry", :placeholder => "MM / YY" %>
</p>

<p class="field" data-hook="card_code">
  <%= label_tag "card_code", Spree.t(:card_code) %><span class="required">*</span><br />
  <%= text_field_tag "", '', options_hash.merge(:"data-braintree-name" => "cvv", :id => 'card_code', :class => 'required cardCode', :size => 5) %>
  <%= link_to "(#{Spree.t(:what_is_this)})", spree.content_path('cvv'), :target => '_blank', "data-hook" => "cvv_link", :id => "cvv_link" %>
</p>

<%= hidden_field_tag "#{param_prefix}[cc_type]", '', :id => "cc_type", :class => 'ccType' %>
<%= hidden_field_tag "#{param_prefix}[gateway_payment_profile_id]", '', :"data-braintree-name" => 'payment_method_nonce' %>
